# -----------------------------------------------------------------------------
# APLICACIÓN
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Trae AI Template"
NODE_ENV=development

# -----------------------------------------------------------------------------
# CLERK AUTHENTICATION
# -----------------------------------------------------------------------------
# Get your keys from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# -----------------------------------------------------------------------------
# SENTRY (Error Tracking & Performance)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://your-project-dsn@sentry.io/your-project-id
SENTRY_ORG=your-organization-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# -----------------------------------------------------------------------------
# UPSTASH REDIS (Rate Limiting & Caching)
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://test-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=test-redis-token

# -----------------------------------------------------------------------------
# VERCEL ANALYTICS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=test-analytics-id

# -----------------------------------------------------------------------------
# CHROMATIC (Visual Testing)
# -----------------------------------------------------------------------------
CHROMATIC_PROJECT_TOKEN=test-chromatic-token

# -----------------------------------------------------------------------------
# GOOGLE SERVICES
# -----------------------------------------------------------------------------
GOOGLE_SITE_VERIFICATION=test-verification-code
GOOGLE_ANALYTICS_ID=G-TEST123456

# -----------------------------------------------------------------------------
# FIGMA (Design Tokens)
# -----------------------------------------------------------------------------
FIGMA_ACCESS_TOKEN=test-figma-token

# -----------------------------------------------------------------------------
# AXE DEVTOOLS (Accessibility)
# -----------------------------------------------------------------------------
AXE_API_KEY=test-axe-api-key

# -----------------------------------------------------------------------------
# SEGURIDAD
# -----------------------------------------------------------------------------
# ⚠️  CRITICAL: Generate a secure random string for production!
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=test-super-secret-key-for-development-only-CHANGE-IN-PRODUCTION
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# BASE DE DATOS
# -----------------------------------------------------------------------------
# ⚠️  WARNING: Replace 'test:test' with secure credentials for production
DATABASE_URL=postgresql://test:test@localhost:5432/test_db

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_PWA=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true