{
  "name": "sass-edd-template-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Next.js + Strapi monorepo template with TypeScript, Clerk auth, and PostgreSQL",
  "scripts": {
    "setup": "bash scripts/setup-node-version.sh",
    "dev": "pnpm run --parallel dev & pnpm docs:dev",
    "dev:all": "pnpm run --filter @template/frontend dev & pnpm run --filter @template/backend dev & pnpm docs:dev",
    "dev:frontend": "pnpm run --filter @template/frontend dev",
    "dev:backend": "pnpm run --filter @template/backend dev",
    "build": "pnpm run --parallel build",
    "build:frontend": "pnpm run --filter @template/frontend build",
    "build:backend": "pnpm run --filter @template/backend build",
    "start:frontend": "pnpm run --filter @template/frontend start",
    "start:backend": "pnpm run --filter @template/backend start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm run --filter @template/frontend type-check",
    "prepare": "husky",
    "test": "pnpm run --filter @template/frontend test",
    "test:watch": "pnpm run --filter @template/frontend test:watch",
    "test:coverage": "pnpm run --filter @template/frontend test:coverage",
    "test:e2e": "pnpm run --filter @template/frontend test:e2e",
    "test:e2e:ui": "pnpm run --filter @template/frontend test:e2e:ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o apps/shared/storybook-static",
    "docs:dev": "node scripts/generate-docs-sidebar.js && vitepress dev apps/shared/docs",
    "docs:build": "node scripts/generate-docs-sidebar.js && vitepress build apps/shared/docs",
    "check:translations": "node scripts/verify-translations.js",
    "sync:translations": "node scripts/sync-translations.js"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "axe-core": "^4.10.3",
    "chromatic": "^13.3.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdoc": "^4.0.5",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^8.6.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitepress": "^1.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
