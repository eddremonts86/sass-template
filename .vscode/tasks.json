{
  "version": "2.0.0",
  "tasks": [
    // ============================================
    // DESARROLLO
    // ============================================
    {
      "label": "üöÄ Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Compiling",
          "endsPattern": "(Compiled|Failed to compile)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "üèóÔ∏è  Build Production",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "echo": true,
        "showReuseMessage": true,
        "clear": true,
        "group": "build"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "‚ñ∂Ô∏è  Start Production",
      "type": "shell",
      "command": "pnpm",
      "args": ["start"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false,
        "group": "dev"
      }
    },

