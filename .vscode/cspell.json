  // Expresiones regulares para ignorar
  "ignoreRegExpList": [
    // Ignore hex colors
    "/#[0-9A-Fa-f]{3,8}/g",
    // Ignore URLs
    "/https?:\\/\\/[^\\s]+/g",
    // Ignore imports
    "/import\\s+.*from\\s+['\"].*['\"]/g",
    // Ignore classNames
    "/className=['\"][^'\"]*['\"]/g"
  ],

  // Archivos a ignorar
  "ignorePaths": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "*.log",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock",
    ".git",
    ".vscode",
    "public"
  ],

  // Configuración de idiomas
  "language": "en,es",

  // Habilitar para todos los archivos
  "enableFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "markdown",
    "mdx",
    "json",
    "jsonc"
  ]
